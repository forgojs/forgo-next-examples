{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "target": "ES2021",
    "module": "NodeNext",
    "lib": ["ES2021", "DOM"],
    "declaration": true,
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "jsxFactory": "forgo.createElement",
    "jsxFragmentFactory": "forgo.Fragment",
    "allowSyntheticDefaultImports": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["./.eslintrc.js"]
}
